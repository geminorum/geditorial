{
  "root": {
    "changelog": "CHANGES.md"
  },
  "input": {
    "modules": "./includes/Modules/*",
    "php": [
      "./**/*.php",
      "!./assets{,/**}"
    ],
    "sass": "./assets/sass/**/*.scss",
    "js": [
      "./assets/js/*.js",
      "!./assets/js/*.min.js",
      "./assets/js/tinymce/*.js",
      "!./assets/js/tinymce/*.min.js",
      "!./assets/js/vendor/*.js"
    ],
    "banklogos": [
      "./includes/Modules/Iranian/data/banklogos/*.svg",
      "!./includes/Modules/Iranian/data/banklogos/*.min.svg"
    ],
    "svg": [
      "./assets/images/**/*.svg",
      "!./assets/images/**/*.min.svg"
    ],
    "images": "./assets/images/raw/**/*.{png,jpg,jpeg}",
    "banner": [
      "./assets/css/**/*.css",
      "!./assets/css/**/*.raw.css",
      "./assets/js/*.js",
      "./assets/js/tinymce/*.js",
      "!./assets/js/vendor/*.js"
    ],
    "ready": "./ready/**/*",
    "final": [
      "./assets/css/**/*.css",
      "./assets/css/**/*.html",
      "./assets/images/**/*",
      "./assets/js/**/*.js",
      "./assets/js/**/*.html",
      "./assets/blocks/**/build/**/*",
      "!/assets/blocks/**/src/**/*",
      "./assets/apps/**/build/**/*",
      "!/assets/apps/**/node_modules/**/*",
      "!/assets/apps/**/src/**/*",
      "./assets/packages/**/*",
      "./assets/templates/**/*",
      "./assets/vendor/**/*.php",
      "!./assets/vendor/**/test/*",
      "!./assets/vendor/**/Tests/*",
      "!./assets/vendor/**/tests/*",
      "!./assets/vendor/**/scripts/*",
      "!./assets/vendor/**/examples/*",
      "!./assets/vendor/**/.git",
      "./assets/views/**/*",
      "./assets/index.html",
      "./includes/**/*",
      "./languages/**/*",
      "!./languages/**/*.pot",
      "!./languages/**/*.po",
      "./*.php",
      "./*.md",
      "./LICENSE",
      "./index.html"
    ]
  },
  "output": {
    "css": "./assets/css",
    "js": "./assets/js",
    "sourcemaps": "./maps",
    "images": "./assets/images",
    "languages": "./languages/geditorial.pot",
    "ready": "./ready/",
    "final": ".."
  },
  "logs": {
    "tinypng": "./assets/images/raw/.tinypng-sigs"
  },
  "env": {
    "github": "",
    "tinypng": ""
  },
  "sass": {
    "sourceComments": true,
    "errLogToConsole": true,
    "includePaths": [
      "./../../gnetwork/assets/sass",
      "./../gnetwork/assets/sass"
    ]
  },
  "cssnano": {
    "dev": {
      "preset": [
        "default", {
          "zindex": false,
          "normalizeWhitespace": false,
          "discardComments": false
        }
      ]
    },
    "build": {
      "preset": [
        "default", {
          "zindex": false,
          "discardComments": {
            "removeAll": true
          }
        }
      ]
    }
  },
  "autoprefixer": {
    "dev": {},
    "build": {
      "cascade": false
    }
  },
  "constants": {
    "version": "GEDITORIAL_VERSION"
  },
  "i18n": {
    "plugin": {
      "exclude": [
        ".temp",
        ".git",
        ".imdone",
        ".build",
        ".github",
        "assets/vendor",
        "assets/components",
        "assets/js/vendor",
        "assets/packages",
        "assets/apps/**/src",
        "assets/dev",
        "assets/blocks/**/src",
        "includes/Modules/**/.temp",
        "gulpfile.mjs"
      ],
      "comment": "",
      "headers": {
        "Last-Translator": "NULL",
        "Language-Team": "NULL",
        "POT-Creation-Date": "YEAR-MO-DA HO:MI+ZONE",
        "Report-Msgid-Bugs-To": "<%= data.bugs %>",
        "X-Poedit-Basepath": ".."
      }
    },
    "admin": {
      "exclude": [
        ".temp",
        ".git",
        ".imdone",
        ".build",
        ".github",
        "assets/vendor",
        "assets/components",
        "assets/js/vendor",
        "assets/packages",
        "assets/apps/**/src",
        "assets/dev",
        "assets/blocks/**/src",
        "includes/Modules/**/.temp",
        "gulpfile.mjs",
        "./geditorial.php"
      ],
      "comment": "",
      "headers": {
        "Last-Translator": "NULL",
        "Language-Team": "NULL",
        "POT-Creation-Date": "YEAR-MO-DA HO:MI+ZONE",
        "Report-Msgid-Bugs-To": "<%= data.bugs %>",
        "X-Poedit-Basepath": ".."
      }
    },
    "modules": {
      "exclude": ".temp",
      "comment": "",
      "headers": {
        "Last-Translator": "NULL",
        "Language-Team": "NULL",
        "POT-Creation-Date": "YEAR-MO-DA HO:MI+ZONE",
        "Report-Msgid-Bugs-To": "<%= data.bugs %>",
        "X-Poedit-Basepath": "../../includes/Modules/<%= data.folder %>"
      }
    }
  },
  "pot": {
    "package": "gEditorial",
    "domain": "geditorial",
    "metadataFile": "geditorial.php",
    "bugReport": "https://github.com/geminorum/geditorial/issues",
    "commentKeyword": "translators:",
    "headers": false,
    "lastTranslator": "",
    "team": "geminorum <contact@geminorum.ir>"
  },
  "textdomain": {
    "force": true,
    "text_domain": "geditorial",
    "keywords": [
      "__:1,2d",
      "_e:1,2d",
      "_x:1,2c,3d",
      "esc_html__:1,2d",
      "esc_html_e:1,2d",
      "esc_html_x:1,2c,3d",
      "esc_attr__:1,2d",
      "esc_attr_e:1,2d",
      "esc_attr_x:1,2c,3d",
      "_ex:1,2c,3d",
      "_n:1,2,4d",
      "_nx:1,2,4c,5d",
      "_n_noop:1,2,3d",
      "_nx_noop:1,2,3c,4d"
    ]
  },
  "banner": [
    "/**",
    " * <%= pkg.productName %> - <%= pkg.description %>",
    " * @link <%= pkg.homepage %>",
    " * @license <%= pkg.license %>",
    " */",
    ""
  ],
  "templates": {
    "generalModule" : {
      "src": "./assets/dev/templates/generalModule.template",
      "dest": "./includes/Modules/",
      "ext": "php",
      "defaults": {
        "namespaceAuthor": "geminorum",
        "namespaceBase": "gEditorial",
        "pluginTexdomain": "geditorial",
        "adminTexdomain": "geditorial-admin",
        "moduleTextdomain": "geditorial-general-module",
        "moduleBase": "geditorial",
        "moduleTitle": "General Module",
        "moduleCamelCase": "GeneralModule",
        "moduleUnderline": "general_module",
        "moduleTagline": "[CHANGE ME]",
        "moduleDashicon": "smiley"
      }
    },
    "cptModule" : {
      "src": "./assets/dev/templates/cptModule.template",
      "dest": "./includes/Modules/",
      "ext": "php",
      "defaults": {
        "namespaceAuthor": "geminorum",
        "namespaceBase": "gEditorial",
        "pluginTexdomain": "geditorial",
        "adminTexdomain": "geditorial-admin",
        "moduleTextdomain": "geditorial-cpt-module",
        "moduleBase": "geditorial",
        "moduleTitle": "CPT Module",
        "moduleCamelCase": "CptModule",
        "moduleUnderline": "cpt_module",
        "moduleTagline": "[CHANGE ME]",
        "moduleDashicon": "smiley"
      }
    },
    "taxModule" : {
      "src": "./assets/dev/templates/taxModule.template",
      "dest": "./includes/Modules/",
      "ext": "php",
      "defaults": {
        "namespaceAuthor": "geminorum",
        "namespaceBase": "gEditorial",
        "pluginTexdomain": "geditorial",
        "adminTexdomain": "geditorial-admin",
        "moduleTextdomain": "geditorial-tax-module",
        "moduleBase": "geditorial",
        "moduleTitle": "Tax Module",
        "moduleCamelCase": "TaxModule",
        "moduleUnderline": "tax_module",
        "moduleTagline": "[CHANGE ME]",
        "moduleDashicon": "smiley"
      }
    }
  }
}
